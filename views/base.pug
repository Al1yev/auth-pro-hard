doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel="stylesheet", href="./css/style.css")
    title Admin
  body 
    .navbar
      .profil
        .profil__img
          img(src=`./img/${{user.image}}` alt='' srcset='')
        .profil__name
          h3.profil__name--name #{user.firstName} #{user.lastName}
          p.profil__name--status if (#{user.role}=="admin") Admin else #{user.team }
      if (#{user.role} == "admin")
        .commands
          button.commands__card
            h2.commats__card--text Get All Courses

    block content